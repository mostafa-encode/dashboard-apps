<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_task_form2_inherited_task_duration" model="ir.ui.view">
        <field name="name">project.task.form2.inherit.task_duration</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='text-nowrap' and @groups='hr_timesheet.group_hr_timesheet_user']"
                   position="after">
                <field name="task_duration"/>
            </xpath>
        </field>
    </record>

</odoo>
