<odoo>
    <data noupdate="0">

        <record id="ir_cron_auto_update_task_state" model="ir.cron">
            <field name="name">Auto Update Task State by Planned End Date</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="state">code</field>
            <field name="code">model._auto_update_state_planned_date()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
<!--            <field name="numbercall">-1</field>-->
            <field name="active">True</field>
        </record>

        <record id="ir_cron_recalculate_product_costs" model="ir.cron">
            <field name="name">Recalculate Product Costs from Vendor Bills</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model._update_all_product_costs()</field>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
