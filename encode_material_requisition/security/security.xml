<odoo>
    <record id="module_category_material_requisition" model="ir.module.category">
        <field name="name">Material Requisition</field>
        <field name="description">User access levels for the Material Requisition module.</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_material_requisition_user" model="res.groups">
        <field name="name">Create Material Requisition</field>
        <field name="category_id" ref="module_category_material_requisition"/>
    </record>

    <record id="group_material_requisition_approver" model="res.groups">
        <field name="name">Approve Material Requisition</field>
        <field name="category_id" ref="module_category_material_requisition"/>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
    </record>

    <record id="group_material_requisition_rfq_creator" model="res.groups">
        <field name="name">Create Material Requisition RFQ</field>
        <field name="category_id" ref="module_category_material_requisition"/>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
    </record>

    <record id="group_mark_material_arrived" model="res.groups">
        <field name="name">Mark Material Arrived</field>
        <field name="category_id" ref="module_category_material_requisition"/>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
    </record>

</odoo>
