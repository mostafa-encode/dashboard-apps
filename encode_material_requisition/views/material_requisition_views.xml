<odoo>
    <record id="view_material_requisition_form" model="ir.ui.view">
        <field name="name">material.requisition.form</field>
        <field name="model">material.requisition</field>
        <field name="arch" type="xml">
            <form string="Material Requisition">
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object" class="btn btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn btn-primary"
                            invisible="state != 'waiting'"
                            groups="encode_material_requisition.group_material_requisition_approver"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'waiting'"/>
                    <button name="action_reset" string="Reset to Draft" type="object"
                            invisible="state != 'waiting'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting,approved,in_progress,material_arrived"/>/>
                    <button name="action_create_rfq"
                            string="Create RFQ"
                            type="object"
                            class="btn btn-primary"
                            groups="encode_material_requisition.group_material_requisition_rfq_creator"
                            invisible="state != 'approved' or rfq_created"/>
                    <button name="action_material_arrived"
                            string="Material Arrived"
                            type="object"
                            class="btn btn-success"
                            groups="encode_material_requisition.group_mark_material_arrived"
                            invisible="state != 'in_progress'"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_purchase_orders" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="purchase_order_count == 0">
                            <field name="purchase_order_count" widget="statinfo" string="Purchase Orders"/>
                        </button>
                    </div>
                    <group>
                        <group class="mb-3">
                            <field name="name" readonly="1"/>
                        </group>
                        <group class="mb-5">
                        </group>
                        <group>
                            <field name="description" readonly="state == 'approved'"/>
                            <field name="project_id" readonly="state == 'approved'"/>
                            <field name="work_type_id" readonly="state == 'approved'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state == 'approved'"/>
<!--                            <field name="sub_project_id" readonly="state == 'approved'"/>-->
                            <field name="material_arrived_date" readonly="1"/>
                            <field name="color" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Requisition Lines">
                            <field name="line_ids" readonly="state == 'approved'">
                                <list editable="bottom"
                                      decoration-success="received_qty == product_uom_qty"
                                      decoration-danger="received_qty > product_uom_qty">
                                    <field name="work_sub_type_id"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="product_uom_qty"/>
                                    <field name="received_qty"/>
                                    <field name="receiving_notes"/>
                                    <field name="product_uom"/>
                                    <field name="cost"/>
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="total_price" sum="Total"/>
                                    <field name="vendor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_material_requisition_list" model="ir.ui.view">
        <field name="name">material.requisition.list</field>
        <field name="model">material.requisition</field>
        <field name="arch" type="xml">
            <list decoration-success="state in ('approved','material_arrived')" decoration-danger="state == 'cancelled'"
                  decoration-warning="state in ('waiting','in_progress')" decoration-muted="state == 'draft'">
                <field name="name"/>
                <field name="project_id"/>
<!--                <field name="sub_project_id"/>-->
                <field name="work_type_id"/>
                <field name="state"/>
                <field name="date"/>
                <field name="create_uid"/>
            </list>
        </field>
    </record>

    <record id="view_material_requisition_kanban" model="ir.ui.view">
        <field name="name">material.requisition.kanban</field>
        <field name="model">material.requisition</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="state">
                <!--                <field name="state"/>-->
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click"
                             t-att-class="'oe_kanban_color_%s' % record.color.raw_value">
                            <!--                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_kanban_{{ record.state.raw_value }}">-->
                            <div class="o_kanban_primary_left">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="project_id"/>
                                </div>
<!--                                <div>-->
<!--                                    <field name="sub_project_id"/>-->
<!--                                </div>-->
                                <div>
                                    <field name="work_type_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_material_requisition_search" model="ir.ui.view">
        <field name="name">material.requisition.search</field>
        <field name="model">material.requisition</field>
        <field name="arch" type="xml">
            <search string="Search Material Requisitions">
                <field name="name"/>
                <field name="description"/>

                <filter name="filter_project" string="Project"
                        domain="[]" context="{'group_by': 'project_id'}"/>
<!--                <filter name="filter_sub_project" string="Sub Project"-->
<!--                        domain="[]" context="{'group_by': 'sub_project_id'}"/>-->
                <filter name="filter_work_type" string="Work Type"
                        domain="[]" context="{'group_by': 'work_type_id'}"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_status" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
                    <filter name="group_by_work_type" string="Work Type" context="{'group_by': 'work_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_material_requisition" model="ir.actions.act_window">
        <field name="name">Material Requisitions</field>
        <field name="res_model">material.requisition</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>